@model Register

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Register</h2>
        <form method="POST" asp-controller="User" asp-action="Register" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="inputUsername" class="form-label">Username: </label>
                <input type="text" class="form-control" id="inputUsername" placeholder="Username" asp-for="c_username">
                <span class="text-danger">@Html.ValidationMessageFor(Register => Register.c_username)</span>
            </div>

            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email address: </label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" asp-for="c_email">
                <span class="text-danger">@Html.ValidationMessageFor(Register => Register.c_email)</span>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password: </label>
                <input type="password" class="form-control" id="inputPassword" placeholder="Password"
                    asp-for="c_password">
                <span class="text-danger">@Html.ValidationMessageFor(Register => Register.c_password)</span>
            </div>

            <div class="mb-3">
                <label for="inputConfirmPassword" class="form-label">Confirm Password: </label>
                <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password"
                    asp-for="c_confirmpassword">
                <span class="text-danger">@Html.ValidationMessageFor(Register => Register.c_confirmpassword)</span>
            </div>

            <div class="mb-3">
                <label class="form-label">Gender: </label><br>
                @Html.RadioButtonFor(m => m.c_gender, "Male") Male
                @Html.RadioButtonFor(m => m.c_gender, "Female") Female
            </div>
            
            <div class="mb-3">
                @Html.CheckBoxFor(m => m.c_hobbytravel, "Travel") Travel
                @Html.CheckBoxFor(m => m.c_hobbycricket, "Cricket") Cricket
                @Html.CheckBoxFor(m => m.c_hobbycoding, "Coding") Coding
            </div>

            <div class="mb-3">
                <label for="inputImage" class="form-label" asp-for="Image">Image: </label>
                <input type="file" class="form-control" id="inputImage" asp-for="Image">
                <span class="text-danger">@Html.ValidationMessageFor(Register => Register.c_image)</span>
            </div>
            
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}